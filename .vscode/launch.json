    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "name": "Nest Debug",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start:debug",
                "--",
                "--inspect-brk"
            ],
            "console": "integratedTerminal",
            "restart": true,
            "protocol": "auto",
            "port": 9229,
            "autoAttachChildProcesses": true,
            "cwd": "${workspaceFolder}/nest-server"
        },
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "Next.js: debug full stack",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}/my-app",
            "serverReadyAction": {
                "pattern": "started server on .+, url: (https?://.+)",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            },
            "autoAttachChildProcesses": true
        }
    ]
}